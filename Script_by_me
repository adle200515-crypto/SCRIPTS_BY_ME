--// Scotboost Executor (GamePass + Pestañas + Scroll Scripts) //--

local Players = game:GetService("Players")
local MarketplaceService = game:GetService("MarketplaceService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- ID Game Pass
local GAMEPASS_ID = 1694093718

-- Comprobar Game Pass
local hasPass = false
pcall(function()
    hasPass = MarketplaceService:UserOwnsGamePassAsync(player.UserId, GAMEPASS_ID)
end)

-- Si no tiene Game Pass, mostrar aviso y bloquear
if not hasPass then
    local warnFrame = Instance.new("Frame")
    warnFrame.Size = UDim2.new(0,400,0,200)
    warnFrame.Position = UDim2.new(0.5,-200,0.5,-100)
    warnFrame.BackgroundColor3 = Color3.fromRGB(255,100,100)
    warnFrame.BorderSizePixel = 2
    warnFrame.BorderColor3 = Color3.fromRGB(0,0,0)
    warnFrame.Parent = playerGui

    local warnText = Instance.new("TextLabel")
    warnText.Size = UDim2.new(1,0,1,0)
    warnText.BackgroundTransparency = 1
    warnText.Text = "❌ Ve a comprar el script mediante el Discord"
    warnText.TextColor3 = Color3.fromRGB(0,0,0)
    warnText.Font = Enum.Font.GothamBold
    warnText.TextScaled = true
    warnText.Parent = warnFrame

    return
end

-- GUI principal
local mainGui = Instance.new("ScreenGui")
mainGui.Name = "ScotboostGUI"
mainGui.ResetOnSpawn = false
mainGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 600, 0, 400)
mainFrame.Position = UDim2.new(0.5,-300,0.5,-200)
mainFrame.BackgroundColor3 = Color3.fromRGB(255,220,0)
mainFrame.BackgroundTransparency = 0.2
mainFrame.BorderSizePixel = 2
mainFrame.BorderColor3 = Color3.fromRGB(0,0,0)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = mainGui

-- Título
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0,30)
title.BackgroundTransparency = 1
title.Text = "Scotboost"
title.TextColor3 = Color3.fromRGB(0,0,0)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.Parent = mainFrame

-- Pestañas
local tabFrame = Instance.new("Frame")
tabFrame.Size = UDim2.new(1,0,0,30)
tabFrame.Position = UDim2.new(0,0,0,30)
tabFrame.BackgroundTransparency = 1
tabFrame.Parent = mainFrame

local function createTabButton(name, posX)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0,100,1,0)
    btn.Position = UDim2.new(0,posX,0,0)
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(255,210,0)
    btn.BorderColor3 = Color3.fromRGB(0,0,0)
    btn.BorderSizePixel = 2
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.TextColor3 = Color3.fromRGB(0,0,0)
    btn.Parent = tabFrame
    return btn
end

local executeTabBtn = createTabButton("Execute",10)
local scriptsTabBtn = createTabButton("Scripts",120)

-- Zonas
local executeFrame = Instance.new("Frame")
executeFrame.Size = UDim2.new(1, -20, 1, -70)
executeFrame.Position = UDim2.new(0,10,0,70)
executeFrame.BackgroundTransparency = 1
executeFrame.Parent = mainFrame

local scriptsFrame = Instance.new("Frame")
scriptsFrame.Size = executeFrame.Size
scriptsFrame.Position = executeFrame.Position
scriptsFrame.BackgroundTransparency = 1
scriptsFrame.Visible = false
scriptsFrame.Parent = mainFrame

-- SWITCH PESTAÑAS
executeTabBtn.MouseButton1Click:Connect(function()
    executeFrame.Visible = true
    scriptsFrame.Visible = false
end)

scriptsTabBtn.MouseButton1Click:Connect(function()
    executeFrame.Visible = false
    scriptsFrame.Visible = true
end)

-- SCRIPT BOX + BOTONES (Execute)
local scriptBox = Instance.new("TextBox")
scriptBox.Size = UDim2.new(1, -20, 0, 180)
scriptBox.Position = UDim2.new(0,0,0,0)
scriptBox.MultiLine = true
scriptBox.ClearTextOnFocus = false
scriptBox.BackgroundColor3 = Color3.fromRGB(255,240,150)
scriptBox.TextColor3 = Color3.fromRGB(0,0,0)
scriptBox.Text = ""
scriptBox.Font = Enum.Font.Code
scriptBox.TextSize = 14
scriptBox.TextXAlignment = Enum.TextXAlignment.Left
scriptBox.TextYAlignment = Enum.TextYAlignment.Top
scriptBox.Parent = executeFrame

-- Botones Execute / Clear
local function styleButton(button, text, posX, posY)
    button.Size = UDim2.new(0,100,0,30)
    button.Position = UDim2.new(0,posX,0,posY)
    button.Text = text
    button.BackgroundColor3 = Color3.fromRGB(255,210,0)
    button.BorderColor3 = Color3.fromRGB(0,0,0)
    button.BorderSizePixel = 2
    button.TextColor3 = Color3.fromRGB(0,0,0)
    button.Font = Enum.Font.GothamBold
    button.TextSize = 14
    button.Parent = executeFrame
end

local execButton = Instance.new("TextButton")
styleButton(execButton,"Execute",0,190)
execButton.MouseButton1Click:Connect(function()
    local code = scriptBox.Text
    if code and code ~= "" then
        local func, err = loadstring(code)
        if func then func() else warn("Error:",err) end
    end
end)

local clearButton = Instance.new("TextButton")
styleButton(clearButton,"Clear",110,190)
clearButton.MouseButton1Click:Connect(function()
    scriptBox.Text = ""
end)

-- SCROLLFRAME PARA SCRIPTS
local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Size = UDim2.new(1,0,1,0)
scrollFrame.Position = UDim2.new(0,0,0,0)
scrollFrame.BackgroundTransparency = 1
scrollFrame.BorderSizePixel = 0
scrollFrame.CanvasSize = UDim2.new(0,0,0,0)
scrollFrame.ScrollBarThickness = 8
scrollFrame.Parent = scriptsFrame

local listLayout = Instance.new("UIListLayout")
listLayout.Parent = scrollFrame
listLayout.SortOrder = Enum.SortOrder.LayoutOrder
listLayout.Padding = UDim.new(0,5)

-- Función para agregar scripts
local function addScriptButton(name,url)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1,0,0,30)
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(255,210,0)
    btn.BorderColor3 = Color3.fromRGB(0,0,0)
    btn.BorderSizePixel = 2
    btn.TextColor3 = Color3.fromRGB(0,0,0)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.Parent = scrollFrame
    btn.MouseButton1Click:Connect(function()
        loadstring(game:HttpGet(url))()
    end)
end

-- Aquí tus scripts
addScriptButton("FE Sin Dragon","https://pastebin.com/raw/2aRWmwRF")
addScriptButton("Forsaken","https://rawscripts.net/raw/Universal-Script-FE-C00lKidd-Forsaken-UNIVERSAL-FOR-R6-44107")
addScriptButton("John Doe","https://rawscripts.net/raw/Universal-Script-John-Doe-Script-46855")
addScriptButton("Server Admin","https://raw.githubusercontent.com/gObl00x/Pendulum-Fixed-AND-Others-Scripts/refs/heads/main/Server%20Admin")
addScriptButton("Cool GUI","https://raw.githubusercontent.com/MiRw3b/c00lgui-v3rx/main/c00lguiv3rx.lua")
addScriptButton("Big Hand","https://raw.githubusercontent.com/ian49972/SCRIPTS/refs/heads/main/hand")
addScriptButton("Ro-Xploit 6.0","https://rawscripts.net/raw/Universal-Script-ro-xploit-6-9233")
addScriptButton("Raining Tacos","https://pastebin.com/raw/Yx05z4L5")
addScriptButton("Delta Keyboard","https://raw.githubusercontent.com/Xxtan31/Ata/main/deltakeyboardcrack.txt")
addScriptButton("Ban Hammer","https://raw.githubusercontent.com/nicolasbarbosa323/ban-hammer/refs/heads/main/ban")
addScriptButton("Pandora","https://raw.githubusercontent.com/ian49972/SCRIPTS/refs/heads/main/pandora")
addScriptButton("Grab Gun","https://raw.githubusercontent.com/ian49972/SCRIPTS/refs/heads/main/grab")
addScriptButton("Primadon","https://raw.githubusercontent.com/ian49972/SCRIPTS/refs/heads/main/Primadon")
addScriptButton("Steve","https://raw.githubusercontent.com/ian49972/SCRIPTS/refs/heads/main/Steve")
addScriptButton("R15 → R6","https://raw.githubusercontent.com/ian49972/SCRIPTS/refs/heads/main/R6")

-- Ajuste canvas Scroll
listLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    scrollFrame.CanvasSize = UDim2.new(0,0,0,listLayout.AbsoluteContentSize.Y + 5)
end)
